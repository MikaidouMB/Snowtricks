<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue!{% endblock %}</title>
    <div lang="en">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href="../public/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </div>
</head>
<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('assets/1.png') }}" width="100" height="100" alt="">
        </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Home</a></li>
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item"><a class="nav-link" href="{{ path('admin_users') }}">Admin</a></li>
            {% endif %}

            {% if not app.user %}
                <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_register')}}">Inscription</a></li>
            {% else %}
                <li class="nav-item"><a class="nav-link" href="{{ path('trick_new',{_csrf_token: csrf_token('new-trick')}) }}">Créer Trick</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('user_account',{id :app.user.id, _csrf_token: csrf_token('account-edit')})}}">Mon compte</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a></li>
            {% endif %}
        </ul>
    </div>
</nav>
<body>
{% block body %}{% endblock %}
</body>
<!-- Footer-->
<footer class="py-5 bg-dark">
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-6 col-md-3 item">
                <ul>
                    <li>
                        <a class="nav-link" href="{{ path('app_home') }}">
                            <div id="home-logo">
                                <i class="fas fa-home"></i>
                            </div>
                        </a>
                    </li>
                </ul>
                    <div class="col-md-6 item text">
                        <ul>
                            <li>
                                <a class="nav-link" href="{{ path('app_logout') }}">
                                    <div class="logout">
                                        <i class="fa fa-sign-out " aria-hidden="true"></i>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
            </div>
        </div>
        <p class="m-0 text-white">Copyright &copy; Snowtricks 2021</p>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>    <script src="https://kit.fontawesome.com/cedb22606b.js" crossorigin="anonymous"></script>
<script src="../public/js/bootstrap.min.js"></script>
<script src="../public/js/scripts.js">
</script>
<!-- Plugin JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.1/js/mdb.min.js"></script>
</html>
