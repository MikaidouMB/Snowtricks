{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Etape 1{% endblock %}

{% block body %}

<main class="container mt-3">
    <h1 class="text-center">Mot de passe oublié - Etape 1</h1>
    {{ form_start(forgotPasswordFormStep2) }}

    <div class="row mt-5">
        <div class="col-md-6">
            {{ form_row(forgotPasswordFormStep2.email.first) }}
        </div>
        <div class="col-md-6">
            {{ form_row(forgotPasswordFormStep2.email.second) }}

        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary d-block mx-auto" title="Saisissez deux fois votre adresse email"></button>
        <small> Ce lien sera invalide à {{ passwordMustBeModifiedBefore }}</small>
    </div>
    {{ form_end(forgotPasswordFormstep2) }}
</main>
{% endblock %}