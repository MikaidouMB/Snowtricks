{% extends 'base.html.twig' %}

{% block title %}Hello Snowboarders!{% endblock %}

{% block body %}
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Shop Homepage - Start Bootstrap Template</title>
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="{{ asset("css/styles.css") }}" rel="stylesheet" />
        <link href="{{ asset("css/bootstrap.min.css") }}" rel="stylesheet">

        <script src="https://kit.fontawesome.com/cedb22606b.js" crossorigin="anonymous"></script>
        <!-- Custom Fonts copier le CDN -->
        <link href="../public/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    </head>
    <body>
    <!-- Header-->
    <div class="full-screen-width">
        <img class="img-fluid" src="{{ asset('assets/877546.jpg') }}"  alt="">
    </div>
    <!-- Section-->
      <section class="py-5">
        {% for trick in tricks %}

          <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <div class="col mb-5">
                    <div class="card h-10">
                        <!-- Product image-->
                          <img class="card-img-top" src=" {{ asset('uploads/' ~ trick.images.0.name) }}" alt="..." />

                        <div class="card-body p-2">
                            <div class="text-center">
                                <h5 class="fw-bolder"></h5>
                                <a href="{{ path('trick_show', {'id': trick.id}) }}">{{ trick.name }}</a>
                                    <a href="{{ path('trick_edit', {'id': trick.id}) }}">
                                        <i class="bi bi-pen left-icon-holder"></i>
                                    </a>
                                    <form method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                                        <button class="bi bi-trash">Delete</button>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    </body>
    </html>

{% endblock %}