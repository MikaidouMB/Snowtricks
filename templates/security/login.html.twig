{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="wrapper-form">
        <main class="container mt-5 mb-4" style="position: relative">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 col-sm-3">
                        Bienvenue {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1>M'authentifier pour accéder à mon espace</h1>
                <div class="col-12 mt-4">
                    <div class="mt-4 mb-4 col-sm-3">
                        <label for="inputUserName">
                           <strong>
                               Nom d'utilisateur:
                           </strong><br>
                        </label>
                        <div class="mt-2">
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                        </div>

                    </div>
                    <div class="mt-4 mb-4 col-sm-3">
                        <strong>
                            <label for="inputPassword" >Mot de passe:</label>
                        </strong>
                        <div class="mt-2">
                           <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <button class="btn btn-primary mt-3" type="submit">
                    Se connecter
                </button>
                <a href="{{ path('app_forgot_password') }}" class="d-block text-center text-info text-decoration-none mt-3">Mot de passe oublié</a>
            </form>
        </main>
    </div>

{% endblock %}
