{% extends 'base.html.twig' %}

{% block title %}Editer figure{% endblock %}

{% block body %}
    <div class="container mt-3 mb-4">
        {{ form_errors(form) }}
        <h1>Editer figure</h1>
        <div class="col-12 mt-4 ">
            {{ form_start(form) }}
            {{ form_widget(form._token) }}

            <div class="col-4 mt-4">
                <strong>{{ form_row(form.nameFigure) }}</strong>
            </div>
            <div class="form-floating">
            <div class="col-8 row-12 mt-4">
                <strong>{{ form_row(form.description) }}</strong>
            </div>
            </div>
            <div class="mt-4">
                <strong>{{ form_row(form.images) }}</strong>
            </div>
            <div class="mb-4"  style="margin:auto">
                {% for image in trick.images %}
                    <div class="d-inline-block mt-3" >
                        <img class="mt-3" src=" {{ asset('/uploads/' ~ image.name)| imagine_filter('imgs') }}" alt="Image" height="150vw" />
                        {% for image in form.images %}
                            {{ include("trick/_image.html.twig", {form: image}) }}
                        {% endfor %}
                        <br>
                        <span>
                            <div class="text-center mt-2">
                                <a href= "{{ path('trick_delete_image_edit', {slug: trick.slug,
                                    id: image.id, _csrf_token: csrf_token('delete-image-edit')})}}"
                                    onclick="return confirm('Etes vous sure?')"
                                    class="btn btn-danger" >Supprimer
                                </a>
                            </div>
                        </span>
                    </div>
                {% endfor %}
                <div class="mt-4 col-6">
                    <strong>{{ form_row(form.categories) }}</strong>
                </div>
            </div>

            <div class="text-center">
                {% if form.videos|length < 5 %}
                    <div class="mt-4">
                        <button type="button" id="delete" class="btn btn-info btn-new mt-3 mb-2" data-collection="#videos">
                            Ajouter un lien vers une vidéo
                        </button>
                    </div>
                    {% elseif (form.videos|length) >= 5 %}
                    <p>Vous ne pouvez enregistrer plus de 5 vidéos</p>
                {% endif %}
                    <div style="display: flex;
                    flex-direction: row;
                      flex-wrap: wrap; justify-content: space-evenly;"

                            id="videos"
                            class="col-md-pull-5"
                            data-prototype="{{ include("trick/_video.html.twig", {form: form.videos.vars.prototype})|e("html_attr")}}"
                            data-index="{{ form.videos|length > 0 ? form.videos|last.vars.name + 1 : 0 }}">
                        {% for video in form.videos %}
                            <div class="col-4 " style="margin:auto">
                                {{ include("trick/_video.html.twig", {form: video}) }}
                            </div><br>
                        {% endfor %}
                    </div>
                </div>

                <div class="text-center">
                    {{ include('trick/figure_form.html.twig') }}
                </div>
            </div>
        </div>
        {{ form_end(form, {render_rest:false}) }}
        <div class="text-center m-3"><a href="{{ path('trick_show', {'slug': trick.slug}) }}">Retour à la figure</a></div>
{% endblock %}
