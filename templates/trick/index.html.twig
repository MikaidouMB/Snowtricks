{% extends 'base.html.twig' %}

{% block title %}Trick index{% endblock %}

{% block body %}
    <div class="d-flex" id="wrapper">
    <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
        <div class="list-group list-group-flush">
            <a class="nav-link" href="{{ path('admin_users') }}">Liste Utilisateurs</a>
        </div>
    </div>
        <div id="page-content-wrapper">
    <div class="container">
        <h1 class="text-center">Liste Figures</h1>

        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Créé le</th>
                <th>Publiée le</th>
                <th>Catégorie</th>
                <th>Publiée?</th>
                <th>Image</th>
                <th>Videos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for trick in tricks %}
            <tr>
                <td>{{ trick.id }}</td>
                <td>{{ trick.nameFigure }}</td>
                <td>{{ trick.description|slice(0, 40) }}</td>
                <td>{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trick.publishedAt ? trick.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trick.categories.0.label}}</td>
                <td>{{ trick.isPublished ? 'Oui' : 'Non' }}</td>
                <td> {% for image in trick.images %}
                     {{ image.name|slice(0, 10) }}<br>
                 {% endfor %}</td>
                <td> {% for video in trick.videos %}
                   {{ video.name|slice(0, 10) }}<br>
                {% endfor %}</td>
                <td>
                    <a href="{{ path('trick_show', {'slug': trick.slug|slug}) }}">Voir</a>
                    <a href="{{ path('trick_edit', {'slug': trick.slug|slug}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">aucune figures trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
</div>
{% endblock %}
